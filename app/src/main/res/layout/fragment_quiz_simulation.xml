<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/score"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:id="@+id/ScoreBox"
        app:layout_constraintRight_toLeftOf="@id/score"
        app:layout_constraintTop_toBottomOf="@id/text"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_0"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingHorizontal="5dp"
        android:id="@+id/score"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/text"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:layout_width="166dp"
        android:layout_height="166dp"
        android:src="@drawable/puzzle"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:ignore="MissingConstraints" />
    <ImageView

        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/logo"
        android:src="@drawable/logo"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="29dp"
        app:layout_constraintRight_toLeftOf="@id/logo"
        android:paddingTop="4dp"
        android:paddingBottom="20dp"
        android:layout_marginLeft="10dp"

        android:text="@string/quizz"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        ></TextView>
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/imageView3"
        android:paddingTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/option3"
        android:layout_marginTop="40dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/logo"


        tools:ignore="MissingConstraints" />
    <Button
        android:layout_width="132dp"
        android:layout_height="74dp"
        android:id="@+id/option1"
        app:layout_constraintTop_toBottomOf="@id/imageView3"
        app:layout_constraintRight_toLeftOf="@id/option2"
        app:layout_constraintBottom_toTopOf="@id/option3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/option2"
        tools:ignore="MissingConstraints"></Button>

    <Button
        android:id="@+id/option2"
        android:layout_width="132dp"
        android:layout_height="74dp"
        app:layout_constraintBottom_toTopOf="@id/option4"
        app:layout_constraintStart_toEndOf="@id/option1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView3"
        tools:ignore="MissingConstraints"></Button>

    <Button
        android:layout_width="132dp"
        android:layout_height="74dp"
        android:id="@+id/option3"
        app:layout_constraintTop_toBottomOf="@id/option1"
        app:layout_constraintRight_toLeftOf="@id/option4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:ignore="MissingConstraints"></Button>
    <Button
        android:layout_width="132dp"
        android:layout_height="74dp"
        android:id="@+id/option4"
        app:layout_constraintTop_toBottomOf="@id/option2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/option3"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints"></Button>


</androidx.constraintlayout.widget.ConstraintLayout>