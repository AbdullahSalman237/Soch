<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"

    android:orientation="vertical">

    <Button
        android:id="@+id/new_quiz"
        android:layout_width="165dp"
        android:layout_height="97dp"
        android:layout_marginBottom="380dp"
        android:background="@drawable/round"
        android:text="امتحان شروع کریں؟"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.426"
        app:layout_constraintStart_toStartOf="parent" />
    <Button
        android:id="@+id/home"
        android:layout_width="165dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/new_quiz"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/round"
        android:text="@string/home"
        android:textSize="25sp"
        android:layout_marginTop="21dp"
        android:gravity="center"
        android:textColor="@color/white"
        app:layout_constraintHorizontal_bias="0.426"
        />
    <Button
        android:id="@+id/godseye"
        android:layout_width="165dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/godseye"
        android:textSize="25sp"
        app:layout_constraintHorizontal_bias="0.426"
        android:layout_marginTop="21dp"
        android:background="@drawable/round"
        android:gravity="center"
        android:textColor="@color/white"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="3dp"
        android:layout_marginBottom="8dp"
        android:text="@string/score"

        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginRight="2dp"
        app:layout_constraintBottom_toTopOf="@+id/new_quiz"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.375"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/_10"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/new_quiz"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.590"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/score_of"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/zero"

        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/new_quiz"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>