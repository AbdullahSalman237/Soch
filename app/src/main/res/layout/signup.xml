<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="104dp"
        android:layout_height="113dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="4dp"
        android:contentDescription="@string/todo"
        />

    <EditText
        android:id="@+id/patientname"
        android:layout_width="397dp"
        android:layout_height="60dp"
        android:layout_marginTop="196dp"
        android:drawableStart="@drawable/user"
        android:drawableTint="#0A0A0B"
        android:ems="10"
        android:hint="@string/name"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:scaleX="@dimen/material_emphasis_high_type"
        android:textAlignment="center"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        tools:targetApi="m" />

    <EditText
        android:id="@+id/patientage"
        android:layout_width="397dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:drawableStart="@drawable/umr"
        android:drawableTint="#0A0A0B"
        android:ems="10"
        android:hint="@string/age"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:scaleX="@dimen/material_emphasis_high_type"
        android:textAlignment="center"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/patientname"
        tools:targetApi="m" />

    <EditText
        android:id="@+id/medicationTime"
        android:layout_width="397dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:drawableStart="@drawable/time"
        android:drawableTint="#0E0E0E"
        android:ems="10"
        android:hint="@string/medicationtime"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:scaleX="@dimen/material_emphasis_high_type"
        android:textAlignment="center"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/patientage"
        tools:ignore="TextContrastCheck"
        tools:targetApi="m" />

    <Button
        android:id="@+id/signup"
        android:layout_width="262dp"
        android:layout_height="69dp"
        android:layout_marginBottom="144dp"
        android:background="@drawable/round"
        android:onClick="signup"
        android:text="@string/darjkarein"
        android:textSize="30sp"
        android:textStyle="bold"
        app:iconPadding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="174dp"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="179dp"
        android:text="@string/signupp"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.435"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>