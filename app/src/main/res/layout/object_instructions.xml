<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="731dp"
    android:background="@color/yellow">
    <ImageView
        android:src="@drawable/instructionlogo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/logo"
        app:layout_constraintBottom_toTopOf="@id/intructionmanual"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:text="کسی چیز کی شناخت کے لیے درج ذیل ہدایات پر عمل کریں۔"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:id="@+id/intructionmanual"
        android:layout_width="349dp"
        android:layout_height="441dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:text="- برائے مہربانی کیمرہ آپشن پر کلک کریں۔"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:layout_marginTop="150dp"
        android:layout_width="349dp"
        android:layout_height="441dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:text="- چیز کو کیمرے کے سامنے رکھیں"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:layout_marginTop="300dp"
        android:layout_width="349dp"
        android:layout_height="441dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:text="- براہ کرم ایک وقت میں ایک چیز کا پتہ لگائیں۔"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:layout_marginTop="400dp"
        android:layout_width="349dp"
        android:layout_height="441dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:text="- تصویر لے"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:layout_marginTop="550dp"
        android:layout_width="349dp"
        android:layout_height="441dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:gravity="center"
        android:id="@+id/doit"
        android:text="شروع کریں"
        android:background="@drawable/round"
        android:layout_width="150dp"
        android:layout_height="42dp"
        android:layout_marginBottom="80dp"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>