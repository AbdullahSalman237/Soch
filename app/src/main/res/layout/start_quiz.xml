<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="409dp"
    android:layout_height="711dp"
    android:textAlignment="center"


    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/start_quiz"
        android:layout_width="165dp"
        android:layout_height="90dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/round"
        android:gravity="center"
        android:text="امتحان شروع کریں؟"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.466"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/home"
        android:layout_width="165dp"
        android:layout_height="80dp"
        android:foregroundGravity="center"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/round"
        android:gravity="center"
        android:text="@string/home"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@id/start_quiz"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/godseye"
        android:layout_width="165dp"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/colouring"
        android:gravity="center"
        android:text="@string/godseye"
        android:foregroundGravity="center"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/start_quiz" />

</androidx.constraintlayout.widget.ConstraintLayout>